<html>
    <head>
        <title>Admin</title>
        <link rel="stylesheet" href="adminhome.css">

        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" integrity="sha512-c5wRJ/YFtGedrLmc5Qq7Bz9HJ1pIP+HXcYMYg/NGV7Oxsf+CTbnV7h+Z0zTKV7Qf9XJlZGKjYtr5w5w5FtRbMw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
        <script src="https://kit.fontawesome.com/f19af38efd.js" crossorigin="anonymous"></script>
        <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    </head>
    <body>
        <nav class="navbar2 navbar">
            <a class=" heading" href="#">Gas Agency</a>
            <div class="dropdown dropdown-div">
            <a class="dropdown-link dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" href="">Admin</a>
                <div class="dropdown-menu" aria-labelledby="dropdownMenu1">
                    <a class="dropdown-item" href="/userdetails">Manage Users</a>
                    <a class="dropdown-item" type="button" href="/manageemployee">Manage Employees</a>
                    <a class="dropdown-item" type="button" href="/employeedetails">Employee Details</a>
                    <a class="dropdown-item" type="button" href="/pendingcomplaints">Complaints</a>
                    <a class="dropdown-item" type="button" href="/findorderbyuser">Find user Orders</a>
                    <a class="dropdown-item" type="button" href="/employeeorders">Find employee Orders</a>
                    <a class="dropdown-item" type="button" href="/announcements">Make Announcements</a>
                    <a class="dropdown-item" type="button" href="/addingblog">Add Blog</a>
                    <a class="dropdown-item" type="button" href="/">Logout</a>

                </div>
            </div>
        </nav>
        <div style="text-align:center;padding:5px 0px;color:black">
            <h1>Pending orders</h1>
        </div>
        
        <div>
            <table>
                <tr>
                  <th>Name</th>
                  <th>Email</th>
                  <th>Area</th>
                  <th>Mobile</th>
                  <th>status</th>
                </tr>
                <% orders.forEach(function(order){ %>
                <tr>
                  <td><%= order.personname %></td>
                  <td><%= order.personmail %></td>
                  <td><%= order.personArea %></td>
                  <td><%= order.personphn %></td>
                  
                  <td><%= order.status %></td>
                </tr>
                <% }) %>
            </table>
        </div>


        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-Piv4xVNRyMGpqkS2by6br4gNJ7DXjqk09RmUpJ8jgGtD7zP9yug3goQfGII0yAns" crossorigin="anonymous"></script>
    </body>
</html>